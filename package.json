{
  "name": "lido-ui-components",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "start-storybook -p 5555 -s ./.storybook/public",
    "build": "yarn run build:clean && yarn run build:declarations && yarn run build:babel",
    "build:clean": "yarn workspaces foreach -p -i -v --exclude lido-ui-components run g:clean",
    "build:declarations": "yarn workspaces foreach -p -i -v -t --exclude lido-ui-components run declarations",
    "build:babel": "yarn workspaces foreach -p -i -v -t --exclude lido-ui-components run g:build",
    "g:clean": "cd $INIT_CWD && rimraf dist",
    "g:build": "cd $INIT_CWD && babel --extensions '.js,.jsx,.ts,.tsx' --root-mode upward src --out-dir dist --ignore '**/*.stories.js','**/*.stories.jsx','**/*.stories.ts','**/*.stories.tsx','**/*.test.js','**/*.test.jsx','**/*.test.ts','**/*.test.tsx'",
    "test": "jest",
    "test:coverage": "jest coverage",
    "publish": "yarn build && yarn test && yarn publish:submit",
    "publish:submit": "yarn workspaces foreach -p -i -v -t --exclude lido-ui-components npm publish --tolerate-republish"
  },
  "devDependencies": {
    "@babel/cli": "7.13.14",
    "@babel/core": "7.13.15",
    "@babel/preset-env": "7.13.15",
    "@babel/preset-react": "7.13.13",
    "@babel/preset-typescript": "7.13.0",
    "@storybook/addon-docs": "6.2.8",
    "@storybook/addons": "6.2.8",
    "@storybook/react": "6.2.8",
    "@storybook/storybook-deployer": "2.8.7",
    "@storybook/theming": "6.2.8",
    "babel-core": "6.26.3",
    "babel-jest": "26.6.3",
    "babel-loader": "8.2.2",
    "babel-plugin-styled-components": "1.12.0",
    "eslint": "7.24.0",
    "jest": "26.6.3",
    "jest-haste-map": "26.6.2",
    "jest-resolve": "26.6.2",
    "jest-styled-components": "7.0.3",
    "prettier": "2.2.1",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-test-renderer": "17.0.2",
    "rimraf": "3.0.2",
    "storybook-dark-mode": "1.0.7",
    "ts-jest": "26.5.4",
    "typescript": "4.2.4",
    "webpack": "5.31.2"
  },
  "dependencies": {
    "react-is": "17.0.2",
    "styled-components": "5.2.3"
  }
}
